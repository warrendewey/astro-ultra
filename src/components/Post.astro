---
import { type CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
---

<article class="transition-transform duration-300 hover:scale-105">
  <a href={`/blog/${post.slug}`}>
    <img
      src={post.data.image}
      width={400}
      height={200}
      alt={post.data.title}
      class="rounded-xl shadow-xl mb-3 aspect-auto object-cover"
    />
  </a>
  <a href={`/blog/${post.slug}`} class="text-2xl font-semibold inline-block">
    <h2>{post.data.title}</h2>
  </a>
  <a href={`/blog/${post.slug}`}><p class="line-clamp-2">{post.body}</p></a>
</article>
